<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.samnie.beautypic">

    <!-- 网络访问权限Im -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 访问SDCard权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 往SDCard写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- ACCESS_COARSE_LOCATION访问CellID或WiFi,只要当前设备可以接收到基站的服务信号，便可获得位置信息 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- 检测联网方式，区分用户设备使用的是2G、3G或是WiFi -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 允许一个程序访问精良位置(如GPS) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- 改变WLAN状态的开关，如果打开或关闭 -->
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <!-- 可以获取使用Wi-Fi等WLAN无线网络 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 设置壁纸 -->
    <uses-permission android:name = "android.permission.SET_WALLPAPER"/>

    <meta-data
        android:name="com.samnie.beautypic.util.GlideConfiguration"
        android:value="GlideModule" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/no_title">
        <activity
            android:name="com.samnie.beautypic.activity.SplashActivity"
            android:theme="@style/activitySplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.BeautyDetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/activityAnimationTheme" />
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/StyledIndicators" />
        <activity
            android:name=".activity.ImageBrowseActivity"
            android:process=":picture"
            android:screenOrientation="portrait"
            android:theme="@style/activityAnimationTheme" />
        <activity
            android:name=".wxapi.WXEntryActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:launchMode="singleTop" />
        <activity android:name=".activity.AboutActivity"></activity>
    </application>

</manifest>